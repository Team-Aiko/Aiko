{
    "scripts": {
        "update:deps": "npm i && cd aiko-client && npm i",
        "client": "cd aiko-client && npm run dev",
        "build:watch": "cd server && npx tsc --watch",
        "server": "cd server/dist && nodemon server.js",
        "dev": "concurrently --kill-others-on-fail \"npm run build:watch\" \"npm run server \" \"npm run client\"",
        "dev:server": "concurrently --kill-others-on-fail \"npm run build:watch\" \"npm run server \"",
        "lint": "eslint **/*.ts --quiet"
    },
    "dependencies": {
        "concurrently": "^6.2.1",
        "create-next-app": "^11.1.2",
        "socket.io-client": "^4.2.0"
    },
    "devDependencies": {
        "nodemon": "^2.0.12",
        "prettier": "^2.4.0"
    }
}
